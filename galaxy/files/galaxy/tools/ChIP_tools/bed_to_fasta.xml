<tool id="bed-to-fasta" name="BED to FASTA" version="1.0.0">
    <description>Get genomic sequence from BED file</description>
    <requirements>
        <requirement type="package" version="3.1.4">twobitreader</requirement>
        <requirement type="package" version="1.9">htslib</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
#set genome = $input.metadata.dbkey
python '$__tool_directory__/bed_to_fasta.py' '$input' '$reference_genome.fields.path' output.fa &&
bgzip -c output.fa > '$output'
        ]]>
    </command>
    <inputs>
        <param name="input" type="data" format="interval" label="Fetch sequences for intervals in">
        </param>
        <param name="reference_genome" type="select" label="Using reference genome">
            <options from_data_table="twobit">
                <filter type="data_meta" key="dbkey" ref="input" column="value"/>
            </options>
            <validator type="no_options" message="A built-in reference genome is not available for the build associated with the selected input file"/>
        </param>
    </inputs>
    <outputs>
        <data format="fasta" name="output" metadata_source="input"/>
    </outputs>
    <help>
        Get genomic sequence from BED file
    </help>
    <citations>
    </citations>
</tool>
