<tool id="split_fimo" name="Split FIMO" version="1.0.0">
    <description>Convert a FIMO txt file into multiple bed files</description>

    <requirements>
    </requirements>
    <expand macro="requirements" />
    <command>
        <![CDATA[
        mkdir -p fimo_bed &&
        python $__tool_directory__/split_fimo.py '$fimo_txt' '$meme_xml' --out-dir 'fimo_bed'
        ]]>
    </command>
    <inputs>
        <param name="fimo_txt" type="data" format="txt" label="FIMO text input" />
        <param name="meme_xml" type="data" format="memexml" label="MEME XML input" />
    </inputs>
    <outputs>
        <collection name="output" type="list" label="${tool.name} on ${on_string} ">
            <discover_datasets pattern="(?P&lt;designation&gt;.+)\.bed" format="bed" directory="fimo_bed/" visible="false"/>
        </collection>
    </outputs>
<tests>
    </tests>
    <help>
        Convert a FIMO txt file into multiple bed files
    </help>
</tool>
