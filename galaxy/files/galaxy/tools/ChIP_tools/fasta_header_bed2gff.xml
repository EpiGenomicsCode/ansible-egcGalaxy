<tool id="fasta_header_bed2gff" name="convert header of fasta file from bed to gff" version="1.0.0">
    <description></description>
    <macros>
    </macros>
    <command> 
        <![CDATA[
        python $__tool_directory__/fasta_header_bed2gff.py
        --input "$input" 
        --header_format "bed"
        && cp fasta_file_gff_format_header.fasta $output

]]>
    </command>
    <inputs>
        <param name="input" type="data" format= "fasta" label="fasta file with bed format header as input" />
    </inputs>

    <outputs>
	    <data name="output" type="data" format="fasta" label=" ${tool.name} (fasta) on ${on_string} " />
    </outputs>
